var r = 0;
var g = 20;
var b = 50;

function setup() {
  createCanvas(400, 400);
  background(200);
}

function draw() {
  
  noCursor();
  
  line(width / 2, 0, width / 2, height);
  circle(mouseX, mouseY, 40);

  if (mouseX > width / 2) {
  r+=5;
  fill(r, g, b);
  } 
  else {
  g+=5; 
  fill(r, g, b);  
  }
  
}
