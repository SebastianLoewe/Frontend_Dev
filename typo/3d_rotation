var fnt;

function preload() {
  fnt = loadFont('fonts/itembl.ttf');
}

function setup() {
  
  createCanvas(500, 500, WEBGL);
  textFont(fnt);
  textSize(width / 10);
  textAlign(CENTER, CENTER);
  
}

function draw() {
  
  background(0);
  rotateX(mouseX/300);
  rotateY(mouseX/100);
  rotateZ(mouseY/200);
  text('Rotation', 0, 0);

}
